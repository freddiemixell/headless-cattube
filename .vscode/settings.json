{
    "files.associations": {
        "**/*.html": "django-html"
    },
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.codeActionsOnSave": {
            "source.organizeImports.ruff": "explicit"
        },
        "editor.formatOnSave": true
    },
    "eslint.workingDirectories": [
        "./frontend"
    ]
}